<!DOCTYPE html>
<html>
<body>

<!-- I dont know why can't use form_tag -->
<%
if @data.blank?
	action = 'bookmark/create'
else
	action = 'bookmark/update'
end
%>

<%= form_tag(full_url(action)) do %>
  	<div class="form-group">
        <%= label_tag 'enable' %>
        <select name="enable" id="enable" class="form-control">
            <option value="1" <%= @data.try(:enable)!=0 ? 'selected' : '' %> >yes</option>
            <option value="0" <%= @data.try(:enable)==0 ? 'selected' : '' %> >no</option>
        </select>
    </div>

    <div class="form-group" style="display:none">
  		<%= label_tag('id')%>
  		<%= text_field_tag('id', @data.try(:id) , class: "form-control" ) %>
  	</div>

  	<div class="form-group">
		<%= label_tag 'name' %>
		<%= text_field_tag('name', @data.try(:bookmark_name), class: "form-control" ) %>
	</div>
  	<div class="form-group">
		<%= label_tag 'url' %>
		<%= text_field_tag('url', @data.try(:bookmark_url), class: "form-control" ) %>
	</div>

	<%= submit_tag "submit", class: "btn btn-default" %>

<% end %>


<script language="javascript">

</script>

</body>
</html>

