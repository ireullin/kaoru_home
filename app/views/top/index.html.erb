


<div class="container-fluid">

	<div class="page-header">
		<h1><small>Welcom to</small> Kaoru's home</h1>
	</div>

	
	<div class="col-md-2">
		<div class="list-group">
		  <div class="list-group-item active">本周天氣</div>
		  <% 0.upto(6) do |i| %>
		  <div class="list-group-item">
		  		<h4 class="list-group-item-heading"><%= @weather[i].weather_date %></h4>
	    		<p class="list-group-item-text"><%= "#{@weather[i].min}~#{@weather[i].max} 度" %></p>
	    		<p class="list-group-item-text"><%= "#{@weather[i].des}" %></p>
		  </div>
		  <% end %>
		</div>
	</div>
</div>
