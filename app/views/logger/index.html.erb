<div class="container-fluid">
  	<div class="page-header">
    	<h1>使用統計</h1>
	</div>

	<div class="row">
		
		<div class="col-md-3">
			<table class="table table-hover table-striped">
			    <thead>
			    	<tr>
			        	<th>最常使用路徑</th>
			      	</tr>
			    </thead>

			    <tbody>
			      	<% @count_path.each do |row| %>
			        	<tr>
			          		<td><%= row.path %>&nbsp;&nbsp;<span class="badge"><%= row.count %></span></td>
			        	</tr>
			      	<% end %>
			    </tbody>
			</table>
		</div>

		<div class="col-md-3">
			<table class="table table-hover table-striped">
			    <thead>
			    	<tr>
			        	<th>最常登入IP</th>
			      	</tr>
			    </thead>

			    <tbody>
			      	<% @count_ip.each do |row| %>
			        	<tr>
			          		<td>
			          			<%= row.ip %>&nbsp;&nbsp;
			          			<span class="badge"><%= row.count %></span>
								<% unless row.name.blank? -%>
									<br>
									<%= row.name %>
								<% end -%>
			          			<br>
			          		</td>
			        	</tr>
			      	<% end %>
			    </tbody>
			</table>
		</div>

		<div class="col-md-3">
			<table class="table table-hover table-striped">
			    <thead>
			    	<tr>
			        	<th>IP</th>
			        	<th>Name</th>
			      	</tr>
			    </thead>

			    <tbody>
			      	<% @ipowner.each do |row| %>
			        	<tr>
			          		<td><%= row.ip %></td>
			          		<td><%= row.name %></td>
			        	</tr>
			      	<% end %>
			    </tbody>
			</table>
		</div>

	</div>

	<br>
	<div class="page-header">	
    	<h1>登入紀錄</h1>
	</div>

	<div>
		<table class="table table-hover table-striped">
		    <thead>
		    	<tr>
		        	<th>ip</th>
		        	<th>owner</th>
		        	<th>reason</th>
		        	<th>path</th>
		        	<th>agent</th>
		        	<th>created date</th>
		      	</tr>
		    </thead>

		    <tbody>
		      	<% @histories.each do |row| %>
		        	<tr>
		          	<td><%= row.ip %></td>
		          	<td><%= row.name %></td>
		          	<td><%= row.reason %></td>
		          	<td><%= row.path %></td>
		          	<td><%= row.agent %></td>
		          	<td><%= row.created_at.localtime.strftime("%Y-%m-%d %H:%M:%S") %></td>
		        	</tr>
		      	<% end %>
		    </tbody>
		</table>
	</div>

	
</div>
