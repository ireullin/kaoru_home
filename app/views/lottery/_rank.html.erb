<% obj = JSON.parse(row.content) %>
<% base = obj['normal']['count'][0].to_f %>
<tr>
	<td>
		<b>
		號碼
		<br>
		出現次數
		<br>
		機率
		</b>
	</td>

	<td bgcolor="papayawhip">
		<b><%= obj['normal']['numbers'][0] %></b>
		<br>
		<%= base.to_i %>
	</td>

	<% 1.upto(5) do |i|  %>
		<% probability = (obj['normal']['count'][i].to_f / base * 100).to_i %>
		<td bgcolor="bisque">
			<b><%= obj['normal']['numbers'][i] %></b>
			<br>
			<%= obj['normal']['count'][i] %>
			<br>
			<font <%= 'color=red' if(probability>=@prob_no) %> > <%= probability %>% </font>
		</td>
	<% end %>


	<% 6.upto(9) do |i|  %>
		<% probability = (obj['normal']['count'][i].to_f / base * 100).to_i %>
		<td bgcolor="wheat">
			<b><%= obj['normal']['numbers'][i] %></b>
			<br>
			<%= obj['normal']['count'][i] %>
			<br>
			<font <%= 'color=red' if(probability>=@prob_no) %> > <%= probability %>% </font>
		</td>
	<% end %>


	<% 0.upto(2) do |i|  %>
		<% probability = (obj['special']['count'][i].to_f / base * 100).to_i %>
		<td bgcolor="tan">
			<b><%= obj['special']['numbers'][i] %></b>
			<br>
			<%= obj['special']['count'][i] %>
			<br>
			<font <%= 'color=red' if(probability>=@prob_sp) %> > <%= probability %>% </font>
		</td>
	<% end %>


	<td>
		<%= row.updated_at.localtime.strftime("%Y-%m-%d") %>
		<br>
		<%= row.updated_at.localtime.strftime("%H:%M:%S") %>
	</td>

</tr>
